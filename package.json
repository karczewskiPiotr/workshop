{
  "name": "workshop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "drizzle:push": "dotenv -e .env.development drizzle-kit push:pg",
